extends layout

block content
    h1 Жанр: #{genre.name}

    div(style='margin-left:20px;margin-top:20px')

        h2(style='font-size: 1.5rem;') Книги
        if genre_books.length
            dl
                each book in genre_books
                    dt
                        a(href=book.url) #{book.title}
                    dd !{book.summary}
        else
            p У цього жанру немає книг.

        a.btn.btn-danger(href=genre.url + '/delete', style='margin-top:15px;') Видалити жанр
        a.btn.btn-secondary(href=genre.url + '/update', style='margin-top:15px;') Редагувати жанр

